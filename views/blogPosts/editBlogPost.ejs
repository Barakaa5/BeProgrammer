  
<% include ../partials/header%>

<div class="mr-0 container">
	<div class="row">
		<div class="p-0 Form col-12">
			<h1 style="text-align: center">Edit <%= blogPost.title %></h1>
			<div style="width: 30%; margin: 25px auto;">
				<form action="/blogPost/<%= blogPost._id %>?_method=PUT" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" name="blogPost[title]" value="<%= blogPost.title %>" maxlength="58">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="blogPost[image]" value="<%= blogPost.image %>">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="blogPost[description]" value="<%= blogPost.description %>">
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-primary btn-block">Submit!</button>
					</div>
				</form>
				<a href="/blogPost/<%= blogPost._id %>">Go Back</a>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer%>