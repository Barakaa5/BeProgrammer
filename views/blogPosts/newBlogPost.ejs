<% include ../partials/header%>

	<div class="mr-0 container">
		<div class="row">
			<div class="p-0 Form col-12">
				<h1 style="text-align: center">Create a New Blog Post</h1>
				<div style="width: 30%; margin: 25px auto;">
					<form action="/blogPosts" method="POST">
						<div class="form-group">
							<input class="form-control" type="text" name="title" placeholder="title" maxlength="58">
						</div>
						<div class="form-group">
							<input class="form-control" type="text" name="image" placeholder="image url">
						</div>
						<div class="form-group">
							<input class="form-control" type="text" name="description" placeholder="description">
						</div>
						<div class="form-group">
							<button class="btn btn-lg btn-primary btn-block">Submit!</button>
						</div>
					</form>
					<a href="/">Go Back</a>
				</div>
			</div>
		</div>
	</div>
	<% include ../partials/footer%>