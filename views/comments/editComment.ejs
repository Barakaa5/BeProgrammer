  
<% include ../partials/header%>

<div class="mr-0 container">
	<div class="row">
		<div class="p-0 Form col-12">
			<h1 style="text-align: center">edit comment
				<%= blogPost.title %>
			</h1>
			<div style="width: 30%; margin: 25px auto;">
				<form action="/blogPost/<%= blogPost_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-primary btn-block">Submit!</button>
					</div>
				</form>
				<a href="/blogPost/<%= blogPost._id %>">Go Back</a>
			</div>
		</div>
	</div>
</div>
<% include ../partials/footer%>