  
<% include ../partials/header%>
<div class="mr-0 container">
	<div class="row">
		<div class="p-0 Form col-12">
			<h1 style="text-align: center">Add New comment to
				<%= blogPost.title %>
			</h1>
			<div style="width: 30%; margin: 25px auto;">
				<form action="/blogPost/<%= blogPost._id %>/comments" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" name="comment[text]" placeholder="text">
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-primary btn-block">Submit!</button>
					</div>
				</form>
				<a href="/">Go Back</a>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer%>